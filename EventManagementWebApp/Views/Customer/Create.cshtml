@model BusinessObject.Customer

@{
    Layout = "../Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Create Customer";
}

<h2>Create Customer</h2>
<div style="border:2px solid black; border-radius:4px;padding:10px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Customer</legend>
            <div class="row  top-buffer">
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.FirstName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LastName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
            </div>
            <div class="row  top-buffer">
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.EmailID)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.EmailID)
                        @Html.ValidationMessageFor(model => model.EmailID)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.Label("Phone Number")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PhoneNo1)
                        @Html.ValidationMessageFor(model => model.PhoneNo1)
                    </div>
                </div>
            </div>
            <div class="row  top-buffer">
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.Label("Address")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Address1)
                        @Html.ValidationMessageFor(model => model.Address1)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.PostalCode)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PostalCode)
                        @Html.ValidationMessageFor(model => model.PostalCode)
                    </div>
                </div>
            </div>
            <div class="row  top-buffer">

                <div class="col-md-6">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.City)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.City)
                        @Html.ValidationMessageFor(model => model.City)
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.State)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.State)
                        @Html.ValidationMessageFor(model => model.State)
                    </div>
                </div>
            </div>
            <div class="row  top-buffer">
                <div class="col-md-6" style="margin-top:10px;">

                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <input type="submit" class="btn btn-success" value="Create Customer" />
                    <input class="btn btn-primary" onclick="location.href='@Url.Action("Index")';return false;" value="Back to list" />
                </div>
            </div>
        </fieldset>
    }
</div>


